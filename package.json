{
  "name": "devchat",
  "version": "1.0.0",
  "description": "A stealth CLI chat tool for developers - chat while looking like you're coding",
  "main": "dist/index.js",
  "bin": {
    "devchat": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs --dts --clean",
    "dev": "tsup src/index.ts --format cjs --watch",
    "start": "node dist/index.js",
    "test": "node test.js",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "chat",
    "cli",
    "terminal",
    "stealth",
    "developer-tools",
    "tui"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "blessed": "^0.1.81",
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "conf": "^10.2.0",
    "nanoid": "^3.3.7",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.25",
    "@types/node": "^20.11.0",
    "@types/ws": "^8.5.10",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
